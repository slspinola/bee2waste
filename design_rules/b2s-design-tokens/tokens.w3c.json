{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "B2S Design System — Design Tokens (W3C DTCG Format)",
  "$version": "1.0.0",

  "color": {
    "$type": "color",
    "blue": {
      "600": { "$value": "#0077b6", "$description": "Primary darkest" },
      "500": { "$value": "#0096c7", "$description": "Primary default" },
      "400": { "$value": "#00b4d8", "$description": "Primary hover / accent" },
      "300": { "$value": "#48cae4", "$description": "Primary light" },
      "200": { "$value": "#90e0ef", "$description": "Primary lighter" },
      "100": { "$value": "#caf0f8", "$description": "Primary subtle" },
      "50":  { "$value": "#e8f7fa", "$description": "Primary surface" }
    },
    "green": {
      "600": { "$value": "#059669" },
      "500": { "$value": "#10b981" },
      "400": { "$value": "#34d399" },
      "100": { "$value": "#d1fae5" },
      "50":  { "$value": "#ecfdf5" }
    },
    "red": {
      "600": { "$value": "#dc2626" },
      "500": { "$value": "#ef4444" },
      "400": { "$value": "#f87171" },
      "100": { "$value": "#fee2e2" },
      "50":  { "$value": "#fef2f2" }
    },
    "amber": {
      "600": { "$value": "#d97706" },
      "500": { "$value": "#f59e0b" },
      "400": { "$value": "#fbbf24" },
      "100": { "$value": "#fef3c7" },
      "50":  { "$value": "#fffbeb" }
    },
    "neutral": {
      "900": { "$value": "#0f1419" },
      "800": { "$value": "#1a2028" },
      "700": { "$value": "#1a2b3c" },
      "600": { "$value": "#242d38" },
      "500": { "$value": "#2d3748" },
      "400": { "$value": "#5c6b7a" },
      "300": { "$value": "#8899a8" },
      "200": { "$value": "#9aa5b1" },
      "100": { "$value": "#e2e8f0" },
      "75":  { "$value": "#f0f4f7" },
      "50":  { "$value": "#f7f9fb" },
      "0":   { "$value": "#ffffff" }
    },
    "b2s": {
      "$description": "Bee2Solutions brand overrides",
      "warm-red": {
        "600": { "$value": "#c41e1e" },
        "500": { "$value": "#f93f26" },
        "400": { "$value": "#ff5c45" },
        "100": { "$value": "#ffe5e2" },
        "50":  { "$value": "#fff5f4" }
      },
      "petro-gray": {
        "600": { "$value": "#3d4448" },
        "500": { "$value": "#5a6268" },
        "400": { "$value": "#6c757d" },
        "100": { "$value": "#e2e5e7" },
        "50":  { "$value": "#f4f5f6" }
      }
    }
  },

  "font": {
    "family": {
      "$type": "fontFamily",
      "base": { "$value": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"] },
      "mono": { "$value": ["SF Mono", "ui-monospace", "monospace"] }
    },
    "size": {
      "$type": "dimension",
      "xs":   { "$value": "11px",  "$description": "Overlines, nav sections" },
      "sm":   { "$value": "12px",  "$description": "Badges, small labels" },
      "md":   { "$value": "13px",  "$description": "Subtitles" },
      "base": { "$value": "14px",  "$description": "Labels, inputs, buttons" },
      "body": { "$value": "15px",  "$description": "Body text" },
      "lg":   { "$value": "16px",  "$description": "Card titles" },
      "xl":   { "$value": "18px",  "$description": "Section titles" },
      "2xl":  { "$value": "20px",  "$description": "Heading 4" },
      "3xl":  { "$value": "24px",  "$description": "Heading 3, header" },
      "4xl":  { "$value": "28px",  "$description": "Doc title" },
      "5xl":  { "$value": "32px",  "$description": "Stat values" }
    },
    "weight": {
      "$type": "fontWeight",
      "regular":  { "$value": 400 },
      "medium":   { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold":     { "$value": 700 }
    },
    "lineHeight": {
      "$type": "number",
      "tight":   { "$value": 1.0, "$description": "Stat values" },
      "snug":    { "$value": 1.3, "$description": "Headings" },
      "normal":  { "$value": 1.6, "$description": "Body" },
      "relaxed": { "$value": 1.7, "$description": "Doc text" }
    },
    "letterSpacing": {
      "$type": "dimension",
      "normal": { "$value": "0px" },
      "wide":   { "$value": "0.5px", "$description": "Overlines, uppercase labels" }
    }
  },

  "space": {
    "$type": "dimension",
    "1":  { "$value": "4px" },
    "2":  { "$value": "8px" },
    "3":  { "$value": "12px" },
    "4":  { "$value": "16px" },
    "5":  { "$value": "20px" },
    "6":  { "$value": "24px" },
    "8":  { "$value": "32px" },
    "10": { "$value": "40px" },
    "12": { "$value": "48px" },
    "16": { "$value": "64px" }
  },

  "radius": {
    "$type": "dimension",
    "sm":   { "$value": "6px" },
    "md":   { "$value": "10px" },
    "lg":   { "$value": "14px" },
    "xl":   { "$value": "20px" },
    "full": { "$value": "9999px" }
  },

  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": { "offsetX": "0px", "offsetY": "1px", "blur": "2px", "spread": "0px", "color": "rgba(0,0,0,0.05)" }
    },
    "md": {
      "$value": { "offsetX": "0px", "offsetY": "4px", "blur": "12px", "spread": "0px", "color": "rgba(0,0,0,0.08)" }
    },
    "lg": {
      "$value": { "offsetX": "0px", "offsetY": "8px", "blur": "24px", "spread": "0px", "color": "rgba(0,0,0,0.12)" }
    }
  },

  "duration": {
    "$type": "duration",
    "fast":   { "$value": "150ms" },
    "normal": { "$value": "200ms" },
    "slow":   { "$value": "300ms" }
  },

  "sizing": {
    "$type": "dimension",
    "icon": {
      "sm":   { "$value": "14px" },
      "md":   { "$value": "18px" },
      "base": { "$value": "20px" },
      "lg":   { "$value": "22px" },
      "xl":   { "$value": "24px" },
      "2xl":  { "$value": "28px" }
    },
    "layout": {
      "sidebar-width":    { "$value": "280px" },
      "header-height":    { "$value": "70px" },
      "content-max-width":{ "$value": "1400px" }
    },
    "component": {
      "stat-icon":    { "$value": "56px" },
      "alert-icon":   { "$value": "44px" },
      "section-icon": { "$value": "40px" },
      "logo-icon":    { "$value": "44px" },
      "toggle-width": { "$value": "48px" },
      "toggle-height":{ "$value": "28px" },
      "toggle-knob":  { "$value": "22px" },
      "zone-badge-h": { "$value": "28px" },
      "zone-badge-min-w": { "$value": "40px" }
    }
  },

  "iconography": {
    "$description": "Lucide Icons — https://lucide.dev — SVG stroke icons, 24x24, stroke-width 2, round caps/joins",
    "library":       { "$value": "lucide", "$type": "other", "$description": "Official library: lucide-react, lucide-vue-next, lucide, lucide-static" },
    "version":       { "$value": ">=0.460", "$type": "other" },
    "defaults": {
      "viewBox":       { "$value": "0 0 24 24", "$type": "other" },
      "strokeWidth":   { "$value": "2", "$type": "other" },
      "strokeLinecap": { "$value": "round", "$type": "other" },
      "strokeLinejoin":{ "$value": "round", "$type": "other" },
      "fill":          { "$value": "none", "$type": "other" }
    },
    "size": {
      "$type": "dimension",
      "sm":   { "$value": "14px", "$description": "Badge icons" },
      "md":   { "$value": "18px", "$description": "Button icons" },
      "base": { "$value": "20px", "$description": "Nav items" },
      "lg":   { "$value": "22px", "$description": "Section headers" },
      "xl":   { "$value": "24px", "$description": "Standalone, alerts" },
      "2xl":  { "$value": "28px", "$description": "Stat card icons" }
    },
    "mapping": {
      "$description": "Canonical Lucide icon name per UI concept",
      "navigation": {
        "dashboard":    { "$value": "layout-dashboard" },
        "zones":        { "$value": "map-pin" },
        "valves":       { "$value": "circle-dot" },
        "schedules":    { "$value": "calendar-clock" },
        "history":      { "$value": "history" },
        "analytics":    { "$value": "trending-up" },
        "settings":     { "$value": "settings" },
        "alerts":       { "$value": "bell-ring" },
        "users":        { "$value": "users" },
        "help":         { "$value": "circle-help" },
        "menu":         { "$value": "menu" },
        "search":       { "$value": "search" }
      },
      "domain": {
        "blue":        { "$value": "droplets", "$description": "Blue / irrigation" },
        "sensor":       { "$value": "activity", "$description": "Sensor readings" },
        "temperature":  { "$value": "thermometer-sun" },
        "humidity":     { "$value": "cloud-drizzle" },
        "pressure":     { "$value": "gauge" },
        "flow":         { "$value": "waves" },
        "pump":         { "$value": "power" },
        "battery":      { "$value": "battery-medium" },
        "signal":       { "$value": "wifi" },
        "waste":        { "$value": "trash-2", "$description": "Bee2Waste" },
        "recycle":      { "$value": "recycle" },
        "rfid":         { "$value": "scan-line" },
        "truck":        { "$value": "truck" },
        "container":    { "$value": "package" }
      },
      "status": {
        "success":      { "$value": "circle-check" },
        "warning":      { "$value": "triangle-alert" },
        "error":        { "$value": "circle-x" },
        "info":         { "$value": "info" },
        "online":       { "$value": "circle" },
        "offline":      { "$value": "circle-off" },
        "loading":      { "$value": "loader-circle" }
      },
      "action": {
        "add":          { "$value": "plus" },
        "edit":         { "$value": "pencil" },
        "delete":       { "$value": "trash-2" },
        "save":         { "$value": "save" },
        "close":        { "$value": "x" },
        "filter":       { "$value": "sliders-horizontal" },
        "export":       { "$value": "download" },
        "refresh":      { "$value": "refresh-cw" },
        "expand":       { "$value": "maximize-2" },
        "collapse":     { "$value": "minimize-2" },
        "chevronDown":  { "$value": "chevron-down" },
        "chevronRight": { "$value": "chevron-right" },
        "externalLink": { "$value": "external-link" },
        "copy":         { "$value": "copy" },
        "logout":       { "$value": "log-out" }
      },
      "theme": {
        "light":        { "$value": "sun" },
        "dark":         { "$value": "moon" },
        "system":       { "$value": "monitor" }
      },
      "product": {
        "$description": "B2S product icons — Lucide name + SVG file",
        "bee2waste":    { "$value": "recycle", "$description": "Gestão de Recolha de Resíduos" },
        "bee2water":    { "$value": "droplets", "$description": "Gestão de Consumo de Água" },
        "bee2crop":     { "$value": "sprout", "$description": "Rega e Fertilização Inteligente" },
        "bee2green":    { "$value": "leafy-green", "$description": "Gestão de Água e Espaços Verdes" },
        "bee2lighting": { "$value": "lightbulb", "$description": "Gestão de Iluminação Pública" },
        "bee2energy":   { "$value": "zap", "$description": "Gestão de Eficiência Energética" }
      }
    },
    "productIcon": {
      "$description": "B2S product icon container specs",
      "background":   { "$value": "#f93f26", "$type": "color" },
      "foreground":   { "$value": "#ffffff", "$type": "color" },
      "viewBox":      { "$value": "0 0 200 200" },
      "borderRadius": { "$value": "40px", "$type": "dimension" },
      "iconScale":    { "$value": 6.25, "$description": "24px Lucide → 150px" },
      "iconOffset":   { "$value": "25px", "$type": "dimension" }
    }
  }
}
